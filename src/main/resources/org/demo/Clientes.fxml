<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.demo.Controllers.ClientesController"
            prefWidth="1200.0" prefHeight="800.0">

    <children>

        <!-- === SECCIÓN SUPERIOR: FORMULARIO Y BOTONES === -->
        <AnchorPane prefHeight="380.0"
                    AnchorPane.topAnchor="20.0"
                    AnchorPane.leftAnchor="20.0"
                    AnchorPane.rightAnchor="20.0">
            <children>

                <!-- FORMULARIO CLIENTE -->
                <AnchorPane prefWidth="70.0"
                            AnchorPane.leftAnchor="0.0"
                            AnchorPane.topAnchor="0.0"
                            AnchorPane.bottomAnchor="0.0"
                            AnchorPane.rightAnchor="300.0"
                            style="-fx-border-color: black;">
                    <children>
                        <GridPane hgap="20" vgap="25"
                                  AnchorPane.topAnchor="20.0"
                                  AnchorPane.bottomAnchor="20.0"
                                  AnchorPane.leftAnchor="20.0"
                                  AnchorPane.rightAnchor="20.0">
                            <columnConstraints>
                                <ColumnConstraints prefWidth="150.0" halignment="RIGHT"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>

                            <rowConstraints>
                                <RowConstraints prefHeight="40.0"/>
                                <RowConstraints prefHeight="40.0"/>
                                <RowConstraints prefHeight="40.0"/>
                                <RowConstraints prefHeight="40.0"/>
                                <RowConstraints prefHeight="40.0"/>
                            </rowConstraints>

                            <children>
                                <Label text="Nombre:">
                                    <font><Font size="18.0"/></font>
                                </Label>
                                <TextField fx:id="txtNombre" GridPane.columnIndex="1"/>

                                <Label text="Documento:" GridPane.rowIndex="1">
                                    <font><Font size="18.0"/></font>
                                </Label>
                                <TextField fx:id="txtDocumento" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                                <Label text="Teléfono:" GridPane.rowIndex="2">
                                    <font><Font size="18.0"/></font>
                                </Label>
                                <TextField fx:id="txtTelefono" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                                <Label text="Dirección:" GridPane.rowIndex="3">
                                    <font><Font size="18.0"/></font>
                                </Label>
                                <TextField fx:id="txtDireccion" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                                <Label text="Correo:" GridPane.rowIndex="4">
                                    <font><Font size="18.0"/></font>
                                </Label>
                                <TextField fx:id="txtCorreo" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>

                <!-- BOTONES -->
                <AnchorPane prefWidth="250.0"
                            AnchorPane.topAnchor="0.0"
                            AnchorPane.bottomAnchor="0.0"
                            AnchorPane.rightAnchor="0.0">
                    <children>
                        <VBox alignment="CENTER" spacing="15"
                              AnchorPane.topAnchor="40.0"
                              AnchorPane.leftAnchor="0.0"
                              AnchorPane.rightAnchor="0.0">
                            <children>

                                <Button text="Guardar" onAction="#onGuardarCliente"
                                        prefWidth="150.0" prefHeight="50.0"
                                        style="-fx-background-color: #2ECC71; -fx-background-radius: 8;">
                                    <cursor><Cursor fx:constant="HAND"/></cursor>
                                    <font><Font name="Trebuchet MS Bold" size="14.0"/></font>
                                </Button>

                                <Button text="Eliminar" onAction="#onEliminarCliente"
                                        prefWidth="150.0" prefHeight="50.0"
                                        style="-fx-background-color: #E74C3C; -fx-background-radius: 8;">
                                    <cursor><Cursor fx:constant="HAND"/></cursor>
                                    <font><Font name="Trebuchet MS Bold" size="14.0"/></font>
                                </Button>

                                <Button text="Actualizar" onAction="#onActualizarCliente"
                                        prefWidth="150.0" prefHeight="50.0"
                                        style="-fx-background-color: #3498DB; -fx-background-radius: 8;">
                                    <cursor><Cursor fx:constant="HAND"/></cursor>
                                    <font><Font name="Trebuchet MS Bold" size="14.0"/></font>
                                </Button>

                                <Button text="Limpiar Campos" fx:id="onLimpiarCampos"
                                        prefWidth="150.0" prefHeight="50.0"
                                        style="-fx-background-color: #BDC3C7; -fx-background-radius: 8;">
                                    <cursor><Cursor fx:constant="HAND"/></cursor>
                                    <font><Font name="Trebuchet MS Bold" size="14.0"/></font>
                                </Button>

                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>

        <!-- === TABLA CLIENTES === -->
        <ScrollPane fitToHeight="true" fitToWidth="true"
                    AnchorPane.leftAnchor="20.0"
                    AnchorPane.rightAnchor="20.0"
                    AnchorPane.bottomAnchor="20.0"
                    AnchorPane.topAnchor="420.0">
            <content>
                <AnchorPane>
                    <children>
                        <TableView fx:id="tblClientes"
                                   AnchorPane.topAnchor="0.0"
                                   AnchorPane.bottomAnchor="0.0"
                                   AnchorPane.leftAnchor="0.0"
                                   AnchorPane.rightAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150.0"/>
                                <TableColumn fx:id="colDocumento" text="Documento" prefWidth="120.0"/>
                                <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120.0"/>
                                <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="200.0"/>
                                <TableColumn fx:id="colCorreo" text="Correo" prefWidth="180.0"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>

    </children>
</AnchorPane>
