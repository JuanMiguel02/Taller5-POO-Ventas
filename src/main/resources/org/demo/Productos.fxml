<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.demo.Controllers.ProductosController"
            AnchorPane.topAnchor="0.0"
            AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0">

    <children>

        <!-- Formulario de productos -->
        <AnchorPane AnchorPane.topAnchor="20.0"
                    AnchorPane.leftAnchor="20.0"
                    AnchorPane.rightAnchor="250.0"
                    prefHeight="280.0"
                    style="-fx-border-color: #BDC3C7; -fx-border-radius: 5;">
            <children>
                <GridPane hgap="20" vgap="20" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="20"/>
                        <ColumnConstraints percentWidth="80"/>
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints percentHeight="25"/>
                        <RowConstraints percentHeight="25"/>
                        <RowConstraints percentHeight="25"/>
                        <RowConstraints percentHeight="25"/>
                    </rowConstraints>

                    <!-- Nombre -->
                    <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0">
                        <font><Font size="16.0"/></font>
                    </Label>
                    <TextField fx:id="txtNombre"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"
                               prefHeight="35.0"/>

                    <!-- Precio -->
                    <Label text="Precio:" GridPane.rowIndex="1" GridPane.columnIndex="0">
                        <font><Font size="16.0"/></font>
                    </Label>
                    <TextField fx:id="txtPrecio"
                               GridPane.rowIndex="1" GridPane.columnIndex="1"
                               prefHeight="35.0"/>

                    <!-- Cantidad -->
                    <Label text="Cantidad:" GridPane.rowIndex="2" GridPane.columnIndex="0">
                        <font><Font size="16.0"/></font>
                    </Label>
                    <TextField fx:id="txtCantidad"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"
                               prefHeight="35.0"/>

                    <!-- Categoría -->
                    <Label text="Categoría:" GridPane.rowIndex="3" GridPane.columnIndex="0">
                        <font><Font size="16.0"/></font>
                    </Label>
                    <TextField fx:id="txtCategoria"
                               GridPane.rowIndex="3" GridPane.columnIndex="1"
                               prefHeight="35.0"/>
                </GridPane>
            </children>
        </AnchorPane>

        <!-- Botones de acción -->
        <VBox spacing="15"
              AnchorPane.topAnchor="40.0"
              AnchorPane.rightAnchor="40.0">
            <children>

                <Button text="Guardar"
                        onAction="#onGuardarProducto"
                        prefHeight="45.0" prefWidth="160.0"
                        style="-fx-background-color: #2ECC71; -fx-background-radius: 8; -fx-text-fill: black;">
                    <cursor><Cursor fx:constant="HAND"/></cursor>
                    <font><Font name="Trebuchet MS Bold" size="14.0"/></font>
                </Button>

                <Button text="Eliminar"
                        onAction="#onEliminarProducto"
                        prefHeight="45.0" prefWidth="160.0"
                        style="-fx-background-color: #E74C3C; -fx-background-radius: 8; -fx-text-fill: black;">
                    <cursor><Cursor fx:constant="HAND"/></cursor>
                    <font><Font name="Trebuchet MS Bold" size="14.0"/></font>
                </Button>

                <Button text="Actualizar"
                        onAction="#onActualizarProducto"
                        prefHeight="45.0" prefWidth="160.0"
                        style="-fx-background-color: #3498DB; -fx-background-radius: 8; -fx-text-fill: black;">
                    <cursor><Cursor fx:constant="HAND"/></cursor>
                    <font><Font name="Trebuchet MS Bold" size="14.0"/></font>
                </Button>

                <Button text="Limpiar Campos"
                        onAction="#onLimpiarCampos"
                        prefHeight="45.0" prefWidth="160.0"
                        style="-fx-background-color: #BDC3C7; -fx-background-radius: 8; -fx-text-fill: black;">
                    <cursor><Cursor fx:constant="HAND"/></cursor>
                    <font><Font name="Trebuchet MS Bold" size="14.0"/></font>
                </Button>
            </children>
        </VBox>

        <!-- Tabla de productos -->
        <ScrollPane fitToHeight="true" fitToWidth="true"
                    AnchorPane.leftAnchor="20.0"
                    AnchorPane.rightAnchor="20.0"
                    AnchorPane.bottomAnchor="20.0"
                    AnchorPane.topAnchor="320.0">
            <content>
                <AnchorPane>
                    <children>
                        <TableView fx:id="tblProductos"
                                   AnchorPane.topAnchor="10.0"
                                   AnchorPane.leftAnchor="10.0"
                                   AnchorPane.rightAnchor="10.0"
                                   AnchorPane.bottomAnchor="10.0">
                            <columns>
                                <TableColumn fx:id="colId" text="ID" prefWidth="80.0"/>
                                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180.0"/>
                                <TableColumn fx:id="colPrecio" text="Precio" prefWidth="100.0"/>
                                <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="100.0"/>
                                <TableColumn fx:id="colCategoria" text="Categoría" prefWidth="150.0"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>

    </children>
</AnchorPane>
